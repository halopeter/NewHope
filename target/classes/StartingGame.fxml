<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="thegame.newHope.view.MenuViewController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fx:id="mainImageTitle" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo.png" />
               </image>
            </ImageView>
            <Button fx:id="newButton" minWidth="250.0" mnemonicParsing="false" onAction="#handleNewButton" text="New">
               <font>
                  <Font size="18.0" />
               </font>
               <effect>
                  <DropShadow blurType="GAUSSIAN" color="#978888" />
               </effect>
            </Button>
            <Button fx:id="continueButton" minWidth="250.0" mnemonicParsing="false" onAction="#handleContinuteButton" text="Continue">
               <font>
                  <Font size="18.0" />
               </font>
               <effect>
                  <DropShadow blurType="GAUSSIAN" color="#978888" />
               </effect>
            </Button>
            <Button fx:id="exitButton" minWidth="250.0" mnemonicParsing="false" onAction="#handleExitButtonAction" text="Exit">
               <font>
                  <Font size="18.0" />
               </font>
               <effect>
                  <DropShadow blurType="GAUSSIAN" color="#978888" />
               </effect>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
