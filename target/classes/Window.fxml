      <Label fx:id="wood" layoutX="24.0" layoutY="85.0" />
      <Label fx:id="stone" layoutX="184.0" layoutY="85.0" />
      <Label fx:id="iron" layoutX="314.0" layoutY="85.0" />
      <Label fx:id="plusWood" layoutX="73.0" layoutY="85.0" />
      <Label fx:id="plusStone" layoutX="245.0" layoutY="86.0" prefHeight="17.0" prefWidth="0.0" />
      <Label fx:id="plusIron" layoutX="365.0" layoutY="86.0" prefHeight="17.0" prefWidth="0.0" />
