            <Font size="17.0" />
         </font></Button>
      <Label fx:id="DayCounter" layoutX="185.0" layoutY="14.0" text="Day-1">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <Label layoutX="21.0" layoutY="54.0" text="Wood" />
      <Label layoutX="187.0" layoutY="54.0" prefHeight="17.0" prefWidth="31.0" text="Stone" />
