      <Button fx:id="buildingsButton" layoutX="38.0" layoutY="295.0" mnemonicParsing="false" onAction="#handleBuildingsButtonAction" text="Buildings">
         <font>
            <Font size="17.0" />
         </font>
      </Button>
      <Button fx:id="saveGameButton" layoutX="285.0" layoutY="295.0" mnemonicParsing="false" onAction="#handleSaveGameButtonAction" text="Save Game">
         <font>
            <Font size="17.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="197.0" layoutY="426.0" mnemonicParsing="false" onAction="#handleExitButtonAction" text="Exit">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
